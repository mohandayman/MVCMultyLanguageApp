@using ITSpark_Task.Models.BussinessLayer.HelperClasses;
@model ITSpark_Task.Student

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewBag.CreateNew</h1>

<h4>@ViewBag.Student</h4>
<hr />
<div class="row">
    <div class="col-md-6 m-auto ">
        <form asp-action="Create">
            <div class="form-group">

                <label asp-for="Name" class="control-label">@ViewBag.Name</label>


                <input asp-for="Name" class="form-control" placeholder="@ViewBag.StudentName" />

                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label">@ViewBag.Gender</label>
                <select class="form-control" asp-for="Gender">
                    <option value="Male">@ViewBag.Male</option>
                    <option value="Female">@ViewBag.Female</option>
                </select>
                <span asp-validation-for="Gender"></span>
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label">@ViewBag.City</label>
                <select class="form-control" asp-for="City">
                    @foreach (var City in Enum.GetValues(typeof(Cities)))
                    {
                        <option value="@City">@City</option>
                    }
                </select>
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BirthDate" class="control-label"> @ViewBag.BirthDate</label>
                <input asp-for="BirthDate" class="form-control" />
                <span asp-validation-for="BirthDate" class="text-danger"></span>
            </div>
            <div class="form-group text-center ">
                <button type="submit" asp-action="Create" class="btn btn-primary m-4 col-4 " /> @ViewBag.CreateNew</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-danger" asp-action="Index">@ViewBag.BacktoList</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
